<div class="container">
    <form style="margin-top:40px;" action="/home/write" method="POST">
        <div class="form-group">
            <label for="exampleInputEmail1">제목</label>
            <input type="text" name="title" class="form-control" id="exampleInputEmail1" placeholder="제목">
        </div>
        <div>
            <label for="exampleInputEmail1">내용</label>
            <textarea name="content" class="form-control" rows="10" id="content" placeholder="내용"></textarea>
        </div>
        <br>
        <p align="center">
            <button type="submit" class="btn btn-default">작성</button>
        </p>
    </form>

    
<% @posts.each do |p| %>
    <div class="well">
        <span style="font-weight: bold;"><%= p.title %></span><br>
        <%= p.content %><br>
        <hr>
        <div class="well">
        글자 수(공백 포함) : <%= p.content.length %><br>
        글자 수(공백 제외) : <%= p.content.length - p.content.count(' ') %><br>
        단어 수 : <%= p.content.split.count %><br>
        </div>
        <hr>
        <% p.replies.each do |r|%>
            <p><%= r.content %></p>
        <% end %>
        
        <form style="margin-top:40px;" action="/home/reply_write" method="POST">
            <input type="hidden" value="<%= p.id %>" name="id_of_post">
            <textarea name="content" class="form-control" rows="1" id="content" placeholder="내용"></textarea>
            
            <button type="submit" class="btn btn-default" style="float: right;">작성</button>
            <br>
        </form>
        
    </div>
<% end %>
    
</div>
